<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="10">

    <ImageView
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/foto_servicio" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        >

        <Button
            android:layout_weight="1"
            android:text="Foto Personal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:id="@+id/button_foto_personal"
            android:gravity="center"
            />

        <Button
            android:layout_weight="1"
            android:text="Foto Personal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button"
            android:gravity="center"
            />

    </LinearLayout>

    <TableLayout
        android:layout_weight="2"
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:weightSum="12"

        >

        <TableRow
            android:weightSum="3"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:layout_weight="1"
            >

            <TextView
                android:text="Fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"

                android:layout_weight="1"
                android:background="@drawable/border"
                android:paddingBottom="20dp"
                android:paddingTop="6dp"
                android:gravity="center"
                />

            <TextView
                android:text="Servicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:paddingBottom="20dp"
                android:paddingTop="6dp"
                android:gravity="center"
                />

            <TextView
                android:text="Precio de Pago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:background="@drawable/border"
                android:paddingBottom="20dp"
                android:paddingTop="6dp"
                android:layout_weight="1"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:layout_weight="1"
            android:weightSum="3">

            <TextView
                android:text="Hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:background="@drawable/border"
                android:paddingBottom="20dp"
                android:paddingTop="6dp"
                android:layout_weight="1"
                android:gravity="center"
                />

            <TextView
                android:text="Direccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:paddingBottom="20dp"
                android:paddingTop="6dp"
                android:gravity="center"
                />

            <TextView
                android:text="Modo de pago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:paddingBottom="20dp"
                android:paddingTop="6dp"
                android:gravity="center"
                />
        </TableRow>

    </TableLayout>

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_below="@+id/tableLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout4">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Comentario"
            android:ems="10"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:id="@+id/comment"
            android:paddingBottom="30dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/radioButton3"
            android:layout_toEndOf="@+id/radioButton3" />



        <RadioButton
            android:text="Marca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_alignBaseline="@+id/comment"
            android:layout_alignBottom="@+id/comment"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:text="Cancelar Reserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancela_reserva"
             />
    </LinearLayout>


</LinearLayout>